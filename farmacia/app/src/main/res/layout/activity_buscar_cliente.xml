<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo3"
    tools:context=".BuscarCliente">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="364dp"
            android:layout_height="605dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/buscarCodigo"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:enabled="false"
                android:fontFamily="sans-serif-black"
                android:hint="Código"
                android:drawableLeft="@drawable/codigoicono"
                android:textColor="#FF0000"
                android:background="@drawable/custom_text"
                android:textSize="23dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/buscarNombreCliente"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buscarCodigo"
                android:layout_marginTop="15dp"
                android:enabled="false"
                android:fontFamily="sans-serif-black"
                android:hint="Nombre Cliente"
                android:drawableLeft="@drawable/clienteicono"
                android:textColor="#FF0000"
                android:background="@drawable/custom_text"
                android:textSize="23dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/buscarApellidoCliente"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buscarNombreCliente"
                android:layout_marginTop="15dp"
                android:enabled="false"
                android:fontFamily="sans-serif-black"
                android:hint="Teléfono Cliente"
                android:drawableLeft="@drawable/telefonoicono"
                android:background="@drawable/custom_text"
                android:textColor="#FF0000"
                android:textSize="23dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/buscarDpi"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buscarApellidoCliente"
                android:layout_marginTop="15dp"
                android:enabled="false"
                android:fontFamily="sans-serif-black"
                android:hint="DPI"
                android:drawableLeft="@drawable/dpiicono"
                android:background="@drawable/custom_text"
                android:textColor="#FF0000"
                android:textSize="23dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/buscarPuntosCliente"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buscarDpi"
                android:layout_marginTop="15dp"
                android:enabled="false"
                android:background="@drawable/custom_text"
                android:fontFamily="sans-serif-black"
                android:hint="Puntos"
                android:drawableLeft="@drawable/puntosicono"
                android:textColor="#FF0000"
                android:textSize="23dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buscarScanner"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buscarPuntosCliente"
                android:layout_marginTop="15dp"
                android:text="SCANNER"
                android:background="@drawable/custom_button"/>

            <Button
                android:id="@+id/buscar"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buscarScanner"
                android:background="@drawable/custom_button"
                android:layout_marginTop="15dp"
                android:text="BUSCAR" />


        </LinearLayout>
    </FrameLayout>

</RelativeLayout>